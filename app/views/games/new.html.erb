<h1>New Games</h1>
<div class="d-flex flex-column justify-content-center">
  <div class="d-flex">
    <% @letters.each do |letter| %>
      <div class="letter">
      <%= letter %>
      </div>
    <% end %>
  </div>
  <div class="d-flex flex-column pt-5 pb-5 margin">
    <div class="input-group w-50">
      <form action="score" method="score" data-turbo="false">
        <label class="mb-2" for="word">Whats the longest word you can find?</label><br>
        <div class="input-group">
          <input class="form-control w-60" type="text" name="word">
          <div>
            <input class="btn btn-outline-primary" type="submit" value="Submit answer">
            <%= hidden_field_tag :letters, @letters %>
          </div>
        </div>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      </form>
    </div>
  </div>
</div>
